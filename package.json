{
  "name": "ts-frontend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3005",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.3",
    "@sentry/nextjs": "^7.11.1",
    "@sentry/tracing": "^7.11.1",
    "axios": "^0.27.2",
    "classnames": "^2.3.1",
    "next": "12.2.2",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.2"
  },
  "devDependencies": {
    "@svgr/webpack": "^6.3.1",
    "@types/node": "18.0.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "eslint": "8.19.0",
    "eslint-config-next": "12.2.2",
    "husky": "^7.0.0",
    "lint-staged": "^13.0.3",
    "postcss-custom-media": "^8.0.2",
    "postcss-nested": "^5.0.6",
    "prettier": "2.7.1",
    "stylelint": "14.9.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "26.0.0",
    "stylelint-order": "5.0.0",
    "typescript": "4.7.4",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css,scss}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/**/*.{css,scss}": [
      "stylelint --fix"
    ]
  }
}
